class Solution:
    def areAlmostEqual(self, s1: str, s2: str) -> bool:
        error=0
        if Counter(s1)==Counter(s2):
            for i in range(len(s1)):
                if s1[i]!=s2[i]:
                    error+=1
            if error==2 or error==0:
                return True 
            else:
                return False
        else:
            return False


        
